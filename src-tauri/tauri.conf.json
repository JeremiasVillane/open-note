{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Open Note",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": true,
        "message": true,
        "open": false,
        "save": true
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": true,
        "exists": false,
        "readDir": true,
        "readFile": true,
        "removeDir": false,
        "removeFile": true,
        "renameFile": true,
        "scope": ["$DOCUMENT/**", "$DESKTOP/**/**"],
        "writeFile": true
      },
      "window": {
        "all": true,
        "center": true,
        "close": true,
        "create": true,
        "hide": true,
        "maximize": true,
        "minimize": true,
        "print": true,
        "requestUserAttention": true,
        "setAlwaysOnTop": true,
        "setClosable": true,
        "setContentProtected": true,
        "setCursorGrab": true,
        "setCursorIcon": true,
        "setCursorPosition": true,
        "setCursorVisible": true,
        "setDecorations": true,
        "setFocus": true,
        "setFullscreen": false,
        "setIcon": true,
        "setIgnoreCursorEvents": true,
        "setMaxSize": true,
        "setMaximizable": true,
        "setMinSize": true,
        "setMinimizable": true,
        "setPosition": true,
        "setResizable": true,
        "setSize": true,
        "setSkipTaskbar": true,
        "setTitle": true,
        "show": true,
        "startDragging": true,
        "unmaximize": true,
        "unminimize": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "open.note.jv",
      "publisher": "Jeremias Villane",
      "copyright": "CC0",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    },
    "windows": [
      {
        "title": "Open Note",
        "label": "main",
        "width": 1000,
        "height": 600,
        "minWidth": 924,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": false,
        "alwaysOnTop": false
      }
    ]
  }
}
